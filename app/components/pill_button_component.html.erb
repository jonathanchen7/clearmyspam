<% base_styles = "text-xs rounded-full px-2 sm:px-2 py-0.5 sm:py-1 disabled:opacity-50 hover:enabled:brightness-90 flex items-center w-auto" %>
<% if @path.present? %>
  <%= button_to @path,
                data: @stimulus_data&.erb_attributes,
                class: class_names(base_styles, button_styles),
                disabled: @disabled do %>
    <%= content %>
  <% end %>
<% else %>
  <button <%= "disabled" if @disabled %>
          <%= @stimulus_data&.html_attributes %>
          class="<%= class_names(base_styles, button_styles) %>">
    <%= content %>
  </button>
<% end %>
