<%= link_to @blog.path do %>
  <article class="flex max-w-xl flex-col items-start justify-between hover:bg-gray-200 p-2 sm:p-4 duration-200 rounded-lg">
    <div class="flex items-center gap-x-4 text-xs">
      <span class="relative z-10 rounded-full outline outline-1 outline-primary px-2 py-1 font-medium text-primary">
      <%= @blog.tag %>
    </span>
    </div>
    <div class="group relative text-left">
      <h3 class="mt-3 text-lg/6 font-semibold text-gray-900">
        <span class="absolute inset-0"></span>
        <%= @blog.title %>
      </h3>
      <p class="mt-2 line-clamp-3 text-sm/6 text-gray-600">
        <%= @blog.subtitle %>
      </p>
    </div>
  </article>
<% end %>

