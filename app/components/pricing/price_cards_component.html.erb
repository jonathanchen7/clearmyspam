    name: "Pay As You Go",
    price: 3,
    term: "week",
    subtitle: "Extra flexibility for the extra motivated.",
    features: [
      "Full access to pro features",
      "Cancel anytime",
      "Priority support",
    ],
    cta: "Start Weekly Plan",
    plan_type: "weekly"
