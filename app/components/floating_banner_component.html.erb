<div class="fixed inset-x-0 bottom-0 sm:bottom-auto sm:top-0 flex justify-center p-2 sm:p-4 lg:px-8 z-10 pointer-events-none">
  <div class="flex flex-col md:flex-row w-full sm:w-auto items-center gap-y-2 gap-x-2 sm:gap-x-6 bg-gray-900 rounded-lg py-2 px-2 sm:px-4 text-white pointer-events-auto">
    <p class="text-xs sm:text-sm text-center sm:text-left">
      <%= content %>
    </p>
    <% if @cta_text %>
      <button
        class="flex flex-row items-center gap-x-1 text-xs outline outline-1 hover:outline-primary hover:text-primary duration-200 rounded-full px-2 py-0.5"
        <%= @cta_stimulus_data.html_attributes if @cta_stimulus_data.present? %>
      >
        <%= @cta_text %>
      </button>
    <% end %>
  </div>
</div>