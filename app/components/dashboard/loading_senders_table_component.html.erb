<div class="<%= class_names(hide? && "hidden", "flex flex-col divide-y animate-pulse") %>"
     data-inbox-target="loadingSendersTable">
  <% row_count.times do %>
    <div class="flex flex-row items-center gap-x-3 sm:gap-x-4 p-2 sm:p-3">
      <div class="h-4 w-4 rounded bg-loading"></div>
      <div class="outline outline-1 outline-loading bg-loading rounded-full h-8 w-8 sm:h-10 sm:w-10"></div>
      <div class="flex flex-col gap-y-1.5">
        <div class="bg-loading rounded h-3 w-32"></div>
        <div class="bg-loading rounded h-3 w-48"></div>
      </div>
    </div>
  <% end %>
</div>