<div class="overflow-y-hidden">
  <div class="px-1">
    <nav class="-mb-px flex space-x-2">
      <% @tabs.each do |tab| %>
        <div <%= tab.stimulus_data.html_attributes %>
             class="<%= class_names(
                          "whitespace-nowrap border-b-2 px-1 pb-1 text-sm font-medium hover:cursor-pointer",
                          tab.id == @current_tab_id ? "border-primary text-primary" : "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700"
                        ) %>">
          <%= tab.name %>
        </div>
      <% end %>
    </nav>
  </div>
</div>