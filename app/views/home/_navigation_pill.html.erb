<%# locals: (text:, path:, icon_name: nil, highlight: false) %>
<%= link_to path,
            class: class_names(
              highlight ? "bg-primary text-white hover:bg-primary-hover" : "hover:backdrop-brightness-75",
              current_page?(path) && "bg-gray-300",
              "px-4 py-0.5 rounded-full text-sm font-medium text-gray-900 duration-200"
            ) do %>
  <span class="flex flex-row items-center gap-x-1.5">
    <%= text %>
    <%= helpers.icon('fa-solid', icon_name, class: "text-xs") if icon_name.present? %>
  </span>
<% end %>