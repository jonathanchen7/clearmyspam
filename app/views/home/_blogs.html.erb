<div class="bg-white py-8 sm:py-20 b-red-300">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl">
      <h2 class="text-base/7 font-semibold text-indigo-600">Blog</h2>
      <p class="mt-2 text-balance text-3xl font-semibold tracking-tight text-gray-900 sm:text-4xl">
        Read our recent posts</p>
    </div>
    <div class="mx-auto mt-8 grid max-w-2xl grid-cols-1 gap-y-2 sm:gap-x-4 sm:gap-y-8 border-t border-gray-200 pt-6 sm:pt-12 lg:mx-0 lg:max-w-none lg:grid-cols-3">
      <% Blog.recent.each do |blog| %>
        <%= render Home::BlogPreviewComponent.new(blog) %>
      <% end %>
    </div>
  </div>
</div>