<div class="min-h-screen">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Admin Dashboard</h1>
    </div>
    <!-- Global Metrics Header -->
    <div class="bg-white rounded-lg shadow p-6 mb-8 border border-gray-200">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Global Metrics (All Time)</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <%= render Admin::MetricCardComponent.new(
          title: "Total Users",
          value: @metrics.global_metrics[:total_users],
          icon: '<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/></svg>'
        ) %>
        <%= render Admin::MetricCardComponent.new(
          title: "Total Emails Disposed",
          value: @metrics.global_metrics[:total_emails_disposed],
          icon: '<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z"/></svg>'
        ) %>
        <%= render Admin::MetricCardComponent.new(
          title: "Onboarding Rate",
          value: "#{@metrics.global_metrics[:onboarding_completion_rate]}%",
          icon: '<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/></svg>'
        ) %>
        <%= render Admin::MetricCardComponent.new(
          title: "Conversion Rate",
          value: "#{@metrics.global_metrics[:conversion_rate]}%",
          icon: '<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/></svg>'
        ) %>
      </div>
    </div>
    <!-- Date Range Selector -->
    <div class="bg-white rounded-lg shadow p-6 mb-8 border border-gray-200">
      <div class="flex items-center justify-between">
        <h2 class="text-lg font-semibold text-gray-900">Date Range</h2>
        <div class="flex items-center space-x-4">
          <select id="date-range-select" class="rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
            <% @metrics.date_range_options.each do |option| %>
              <option value="<%= option[:value] %>" <%= 'selected' if params[:date_range] == option[:value] || (params[:date_range].blank? && option[:value] == 'past_week') %>>
                <%= option[:label] %>
              </option>
              <% end %>
            </select>
            <button onclick="updateDateRange()" class="bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500">
              Update
            </button>
          </div>
        </div>
      </div>
      <!-- Date Range Metrics -->
      <div class="bg-white rounded-lg shadow p-6 mb-8 border border-gray-200">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Date Range Metrics (<%= @start_date.strftime("%b %d, %Y") %> - <%= @end_date.strftime("%b %d, %Y") %>)</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          <%= render Admin::MetricCardComponent.new(
          title: "Sign Up User Count",
          value: @metrics.user_signup_count,
          icon: '<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M15 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm-9-2V7H4v3H1v2h3v3h2v-3h3v-2H6zm9 4c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/></svg>'
        ) %>
          <%= render Admin::MetricCardComponent.new(
          title: "Logged In User Count",
          value: @metrics.active_user_count,
          icon: '<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M11 7L9.6 8.4l2.6 2.6H2v2h10.2l-2.6 2.6L11 17l5-5-5-5zm9 12h-8v2h8c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2h-8v2h8v14z"/></svg>'
        ) %>
          <%= render Admin::MetricCardComponent.new(
          title: "Conversion Rate",
          value: "#{@metrics.calculate_conversion_rate}%",
          icon: '<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/></svg>'
        ) %>
          <%= render Admin::MetricCardComponent.new(
          title: "Onboarding Rate",
          value: "#{@metrics.onboarding_completion_rate}%",
          icon: '<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/></svg>'
        ) %>
        </div>
      </div>
      <!-- Top Users Tables -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <%= render Admin::UsersTableComponent.new(
        title: "Top Users by Email Disposal",
        users: @metrics.top_users_by_disposal,
        columns: [
          { header: "User", type: :user_info },
          { header: "Emails Disposed", type: :custom, render: ->(user) { user.total_disposed } },
          { header: "Plan", type: :plan_badge }
        ]
      ) %>
        <%= render Admin::UsersTableComponent.new(
        title: "Recently Signed Up Users",
        users: @metrics.recently_signed_up_users,
        columns: [
          { header: "User", type: :user_info },
          { header: "Signed Up", type: :date, field: :created_at },
          { header: "Status", type: :onboarding_badge }
        ]
      ) %>
      </div>
      <!-- Recently Logged In Users Table -->
      <div class="mt-8">
        <%= render Admin::UsersTableComponent.new(
        title: "Recently Logged In Users",
        users: @metrics.recently_logged_in_users,
        columns: [
          { header: "User", type: :user_info },
          { header: "Last Login", type: :date, field: :last_login_at },
          { header: "Created", type: :date, field: :created_at },
          { header: "Emails Disposed", type: :custom, render: ->(user) { user.metrics&.disposed_count || 0 } },
          { header: "Initial Total Emails", type: :custom, render: ->(user) { user.metrics&.initial_total_threads || 0 } },
          { header: "Initial Unread Emails", type: :custom, render: ->(user) { user.metrics&.initial_unread_threads || 0 } },
          { header: "Plan", type: :plan_badge }
        ]
      ) %>
      </div>
    </div>
  </div>
  <script>
    function updateDateRange() {
      const select = document.getElementById('date-range-select');
      const selectedValue = select.value;
      window.location.href = `/admin?date_range=${selectedValue}`;
    }
  </script> 