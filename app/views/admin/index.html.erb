<div class="min-h-screen bg-gray-50" data-controller="admin">
  <div class="max-w-[98%] mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-6 flex items-center justify-between">
      <h1 class="text-3xl font-bold text-gray-900">Admin Dashboard</h1>
      <%= form_with url: admin_trigger_re_engagement_path, method: :post, local: true, class: "inline-block" do |f| %>
        <%= f.submit "Send Re-engagement Emails", class: "cursor-pointer px-3 py-2 bg-primary text-xs text-white rounded-full hover:bg-primary-hover focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 transition-colors" %>
      <% end %>
    </div>
    <!-- Date Range Filter -->
    <%= render Admin::DateRangeFilterComponent.new(
      metrics: @metrics,
      current_date_range: @current_date_range
    ) %>
    <!-- Metrics Sections -->
    <%= render Admin::UsersMetricsSectionComponent.new(metrics: @metrics) %>
    <%= render Admin::UsageMetricsSectionComponent.new(metrics: @metrics) %>
    <!-- Sort Dropdown -->
    <%= render Admin::SortDropdownComponent.new(
      metrics: @metrics,
      current_sort: @sort_by
    ) %>
    <!-- Users Table -->
    <%= render Admin::UsersTableComponent.new(
      users: @metrics.users,
      metrics: @metrics
    ) %>
  </div>
</div>
