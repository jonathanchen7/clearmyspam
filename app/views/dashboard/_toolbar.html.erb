<%= turbo_frame_tag "toolbar" do %>
  <div class="<%= class_names(
                    @inbox.nil? && 'animate-pulse',
                    "border-t px-4 py-2 flex flex-col lg:flex-row lg:justify-between gap-y-2"
                  ) %>">
    <div class="flex flex-col sm:flex-row items-center gap-x-3 gap-y-2">
      <%= render "dashboard/inbox_metrics" %>
      <%= render "dashboard/options" %>
    </div>
    <div class="flex flex-row-reverse lg:flex-row reverse items-center justify-between lg:justify-end gap-x-2 gap-y-2">
      <%= render 'dashboard/load_more' %>
      <%= render Dashboard::InboxActionsComponent.new(@inbox) %>
    </div>
  </div>
<% end %>